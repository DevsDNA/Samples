<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPRSTracker.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="GPRSNumberEntry" HorizontalOptions="FillAndExpand"/>
        <Button x:Name="GPRSRegisterButton" HorizontalOptions="FillAndExpand" Text="Registrar GPRS device" Clicked="GPRSRegisterButton_Clicked"/>
    </StackLayout>

</ContentPage>
